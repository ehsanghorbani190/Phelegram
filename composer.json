{
    "name": "timerunner2359/phelegram",
    "description": "A simple solution for telegram bots",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Ehsan Ghorbani",
            "email": "ehsanghorbani190@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "autoload": {
        "psr-4": {
            "Phelegram\\" : "./"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-install-cmd": [
            "composer dump-autoload",
            "mkdir Storage"
        ],
        "post-update-cmd": [
            "composer dump-autoload"
        ]
    }
}
